upstream node-http {
  server ${PROJECT}_${ENVIRONMENT}_node:3000;
  keepalive 15;
}

upstream php-fpm {
  server unix:/run/php-fpm/www.sock;
}

server {
  server_name _;
  listen 80 default_server;

  root /var/www/html;
  index index.html;

  client_max_body_size 2m;

  access_log /var/log/nginx/access.log combined;
  error_log /var/log/nginx/error.log;

  location = /favicon.ico {
    log_not_found off;
    access_log off;
  }

  location = /robots.txt {
    allow all;
    log_not_found off;
    access_log off;
  }

  location / {
    proxy_pass http://node-http/;
    include /etc/nginx/snippets/proxy;
  }

  location ${PRESTASHOP_API_PROXY_PATH} {
    include /etc/nginx/snippets/proxy;
    include /etc/nginx/snippets/proxy-cache;
    rewrite ^${PRESTASHOP_API_PROXY_PATH/(.*) ${PRESTASHOP_API_ROOT}/$1 break;
    proxy_pass ${PRESTASHOP_API_SCHEME}://${PRESTASHOP_API_HOST}/;
    proxy_set_header Authorization "${PRESTASHOP_API_AUTHORIZATION_HEADER}";
    proxy_cache_valid ${PRESTASHOP_API_PROXY_CACHE_TTL}s;
  }

  location ~ \.php$ {
    root /var/www/html/php;

    access_log /var/log/nginx/fcgi.access.log simple;
    error_log /var/log/nginx/fcgi.error.log;

    fastcgi_pass php-fpm;
    include /etc/nginx/snippets/php-fpm;
  }
}

# vim: ts=2 sts=2 sw=2 et
